generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String @id
  title     String
  poster    String
  timestamp Int

  Fight Fight[]
}

model Fight {
  id                  String
  eventId             String
  bout                String
  order               Int     @default(0)
  redCornerFirstName  String
  redCornerLastName   String
  redCornerRank       String
  redCornerOdds       Int
  redCornerOutcome    String
  redCountry          String
  redFlag             String
  redPhoto            String?
  blueCornerFirstName String
  blueCornerLastName  String
  blueCornerRank      String
  blueCornerOdds      Int
  blueCornerOutcome   String
  blueCountry         String
  blueFlag            String
  bluePhoto           String?

  Event Event @relation(fields: [eventId], references: [id])

  @@id([id, eventId])
}
