generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String @id
  title     String
  poster    String
  timestamp Int

  Fight Fight[]
  Bets  Bet[]
}

model Fight {
  id                  String
  eventId             String
  bout                String
  order               Int     @default(0)
  redCornerFirstName  String
  redCornerLastName   String
  redCornerRank       String
  redCornerOdds       Int
  redCornerOutcome    String
  redCountry          String
  redFlag             String
  redPhoto            String?
  blueCornerFirstName String
  blueCornerLastName  String
  blueCornerRank      String
  blueCornerOdds      Int
  blueCornerOutcome   String
  blueCountry         String
  blueFlag            String
  bluePhoto           String?

  Event Event @relation(fields: [eventId], references: [id])

  @@id([id, eventId])
}

model User {
  email String @id @unique
  name  String
  image String

  Budgets  Budget[]
  Bets     Bet[]
  Winnings Winnings[]
}

model Budget {
  eventId   String
  userEmail String
  balance   Float
  User      User   @relation(fields: [userEmail], references: [email])

  @@id([eventId, userEmail])
}

enum Corner {
  RED
  BLUE
}

model Bet {
  eventId   String
  fightId   String
  userEmail String
  wager     Float
  corner    Corner

  Event Event @relation(fields: [eventId], references: [id])
  User  User  @relation(fields: [userEmail], references: [email])

  @@id([eventId, fightId, userEmail])
}

model Winnings {
  eventId   String
  userEmail String
  winnings  Float
  User      User   @relation(fields: [userEmail], references: [email])

  @@id([eventId, userEmail])
}
